printWidth: 80
tabWidth: 2
useTabs: false
semi: true
singleQuote: true
trailingComma: all
bracketSpacing: true
jsxBracketSameLine: false
parser: flow

overrides:
- files: "*.@(css)"
  options:
    parser: css
    singleQuote: false
- files: "*.@(json)"
  options:
    parser: json
    printWidth: 80
